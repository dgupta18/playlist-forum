{{#if filter}}
<h2 style="margin-left: 10px">Explore: {{this.filter}}</h2>
{{/if}}

{{#if mood}}
    {{#each data}}
        <a href="/Mood/{{this}}" id="groupDisp">{{this}}</a>
    {{/each}}
{{/if}}

{{#if curator}}
    {{#each data}}
        <a href="/Curator/{{this}}" id="groupDisp">{{this}}</a>
    {{/each}}
{{/if}}

{{#unless group}}
    {{#each data}}
        <article id="displayCard">
            {{!-- display picture --}}
            <span id="displayLeft">
                <div id="displayCover">
                    <img src={{this.cover}} />
                </div>
            </span>
            {{!-- display other info --}}
            <span id="displayRight">
                <span id="playTitle">{{this.title}}</span> <a href={{this.link}} id="playLink">(Listen)</a>
                <div id="space"></div>
                <span class="playInfo">By: {{this.curator}}</span>
                <div id="space"></div>
                <span class="playInfo">Length: {{this.numSongs}} songs</span>
                <div id="space"></div>
                <div><span id="playTags" class="playInfo">Moods: {{this.tags}}<span>
            </span>
        </article>
        <br>
    {{else}}
        <article style="padding-left: 10px;">
            <h2>No playlists yet - be the first to add one!</h2>
        </article>
    {{/each}}
{{/unless}}
