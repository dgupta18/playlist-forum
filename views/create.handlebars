        var newPlaylist = {};
        newPlaylist["title"] = $('input[name="title"]').toString();
        newPlaylist["link"] = $('input[name="link"]').toString();
        newPlaylist["numSongs"] = parseInt($('input[name="numSongs"]'));
        newPlaylist["tags"] = $('input[name="tags"]').toString().split(" ");
